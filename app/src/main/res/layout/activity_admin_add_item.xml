<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities_Admin.AdminAddItemActivity"
    android:orientation="vertical">

    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back_press_icon"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Item"
                    android:textSize="40sp"
                    android:fontFamily="@font/metalmania_regular"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/foodName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Item Name"
                android:fontFamily="@font/metalmania_regular"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:maxEms="10"
                android:elevation="10dp"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/foodPrice"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Item Price"
                android:fontFamily="@font/metalmania_regular"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxEms="4"
                android:elevation="10dp"
                android:textColorHint="@color/black"/>

            <Button
                android:id="@+id/pickImageadmin"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/metalmania_regular"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:text="Item Image"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <androidx.cardview.widget.CardView

                android:layout_width="175dp"
                android:layout_height="120dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/selectedImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/add_photo_icon"
                    android:scaleType="fitCenter"/>

            </androidx.cardview.widget.CardView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Short Description"
                android:fontFamily="@font/metalmania_regular"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxEms="4"
                android:elevation="10dp"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/description"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:background="@drawable/edit_text_bg"
                android:hint="add text"
                android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Ingredents"
                android:fontFamily="@font/metalmania_regular"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:background="@drawable/edit_text_bg"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxEms="4"
                android:elevation="10dp"
                android:textColorHint="@color/black"/>

            <EditText
                android:id="@+id/ingredients"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:background="@drawable/edit_text_bg"
                android:hint="add text"
                android:paddingLeft="5dp"/>
            
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addItemButton"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:background="@drawable/green_btn"
                android:text="Add Item"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/metalmania_regular"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>

        </LinearLayout>


  </ScrollView>




