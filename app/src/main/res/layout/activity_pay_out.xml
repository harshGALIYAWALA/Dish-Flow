<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PayOutActivity">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back_press_icon"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="24sp"
        android:textColor="@color/E_green"
        android:fontFamily="@font/metalmania_regular"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="name"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/metalmania_regular"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/profile_edit_text"
                android:paddingLeft="10dp"
                android:maxEms="10"
                android:imeOptions="actionNext"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Address"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/metalmania_regular"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/profile_edit_text"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:maxLines="5"
                android:minLines="1"
                android:scrollbars="vertical"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Phone "
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/metalmania_regular"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/profile_edit_text"
                android:inputType="phone"
                android:paddingLeft="10dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Payment Method "
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/metalmania_regular"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/profile_edit_text"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:text="Cash on Delivery"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Total Amount "
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/metalmania_regular"/>

            <EditText
                android:id="@+id/totalAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/profile_edit_text"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/placeMyOderBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/green_btn"
        android:text="Place Order"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_regular"
        android:textSize="18dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>